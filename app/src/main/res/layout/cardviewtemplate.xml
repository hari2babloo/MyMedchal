<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginLeft="6dp"
        >


        <ImageView
            android:id="@+id/appImage"
            android:layout_width="120dp"
            android:scaleType="centerCrop"
            android:layout_height="120dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/chalk" />

        <TextView
            android:id="@+id/myImageViewText"
            android:layout_width="wrap_content"
            android:padding="2dp"
            android:textSize="10sp"


            android:background="@color/black"

            android:layout_height="wrap_content"
            android:layout_alignTop="@id/appImage"

            android:layout_marginLeft="5dp"

            android:layout_marginTop="10dp"
            android:text="Exclusive"
            android:textColor="#FFFFFF" />


        <ImageView
            android:id="@+id/appImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"

            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"

            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_myplaces" />
        <TextView
            android:id="@+id/statusmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/appImage"
            android:paddingLeft="16sp"
            android:paddingRight="16dp"
            android:text="Title"
            android:textColor="#000"
            android:textSize="18sp"
            tools:ignore="RtlHardcoded"/>

        <ImageView
            android:id="@+id/location"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_below="@id/statusmsg"
            android:layout_toRightOf="@id/appImage"
            android:src="@android:drawable/ic_menu_mylocation" />
        <TextView
            android:id="@+id/text1"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statusmsg"
            android:layout_toRightOf="@+id/location"
            android:paddingLeft="6dp"
            android:text="SubTiltle"
            android:paddingRight="6dp"
            android:textColor="#000"
            android:textSize="15sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/l2"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_below="@id/text1"
            android:layout_toRightOf="@id/appImage"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0"

                android:padding="2dp"
                 android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:gravity="center"
                />

        <RatingBar
            android:id="@+id/ratingBar"
        android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 Ratings"
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/subHeadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l2"
            android:layout_toRightOf="@+id/appImage"
            android:gravity="left"
            android:lines="2"
            android:maxLines="2"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="stories_detailstories_detailstories_detailstories"
            android:textColor="#737078"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_toRightOf="@id/appImage"
            android:layout_margin="5dp"
            android:layout_below="@id/subHeadingText"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timing"
                android:gravity="left"
                android:layout_weight="1"
                android:text="Timings"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/workingdays"
            android:gravity="center"
            android:layout_weight="1"

            android:text="Mon-Fri"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="end"
            android:layout_weight="1"
            android:text="$$$">

        </TextView>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
