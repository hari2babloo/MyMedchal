<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/appImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chalk" />

        <TextView
            android:id="@+id/band"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/appImage"


            android:layout_marginLeft="5dp"

            android:layout_marginTop="10dp"
            android:background="@color/black"

            android:padding="2dp"

            android:text="Exclusive"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/statusmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/appImage"
            android:paddingLeft="16sp"
            android:paddingRight="16dp"
            android:text="Title"
            android:textColor="#000"
            android:textSize="18sp"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:layout_below="@id/statusmsg"
            android:layout_toRightOf="@id/appImage"
            android:src="@android:drawable/ic_menu_mylocation" />

        <TextView
            android:id="@+id/text1"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statusmsg"
            android:layout_toRightOf="@+id/location"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="SubTiltle"
            android:textColor="#000"
            android:textSize="15sp" />


        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_toRightOf="@id/appImage"
            android:orientation="horizontal"
            android:padding="5dp" />

        <TextView
            android:id="@+id/subHeadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appImage"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"
            android:gravity="left"
            android:lines="2"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="stories_detailstories_detailstories_detailstories"
            android:textColor="#737078"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/subHeadingText"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Timings" />

            <TextView
                android:id="@+id/workingdays"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                android:text="Mon-Fri"></TextView>


        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>